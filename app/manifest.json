{
    "manifest_version": 3,
    "name": "Stock Trace",
    "version": "1.0",
    "description": "查询股票",
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "icons": {
        "16": "images/icon16.png"
    },
    "omnibox": {
        "keyword": "stock"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://finance.sina.com.cn/*",
        "*://vip.stock.finance.sina.com.cn/*"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png"
        },
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
}