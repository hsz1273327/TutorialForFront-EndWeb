{
    "manifest_version": 3,
    "name": "My Alarms",
    "version": "1.0",
    "description": "设置闹钟提醒",
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "icons": {
        "16": "images/icon16.png",
        "128":"images/icon128.png"
    },
    "omnibox": {
        "keyword": "alarm"
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png"
        }
    }
}