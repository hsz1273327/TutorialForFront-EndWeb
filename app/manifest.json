{
    "manifest_version": 3,
    "name": "Speaker",
    "version": "1.0",
    "description": "设置闹钟提醒",
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "icons": {
        "16": "images/icon16.png",
        "128": "images/icon128.png"
    },
    "omnibox": {
        "keyword": "speak"
    },
    "permissions": [
        "storage",
        "notifications",
        "tts",
        "contextMenus",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.png"
        },
        "default_popup": "popup.html"
    },
    "commands": {
        "run-speak": {
            "suggested_key": {
                "default": "Alt+T",
                "mac": "Alt+T"
            },
            "description": "Run \"speak\" on the current page."
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ]
}