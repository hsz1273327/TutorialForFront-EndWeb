{
    "name": "js-toolchain-exp",
    "version": "1.0.0",
    "description": "js演示工具集",
    "main": "bin/index.js",
    "scripts": {
        "start": "./node_modules/.bin/ts-node src/index.ts",
        "build": "./node_modules/.bin/tsc",
        "test": "./node_modules/.bin/nyc ./node_modules/.bin/mocha"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hszofficial/js-toolchain-exp.git"
    },
    "keywords": [
        "演示"
    ],
    "author": "hsz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hszofficial/js-toolchain-exp/issues"
    },
    "homepage": "https://github.com/hszofficial/js-toolchain-exp#readme",
    "devDependencies": {
        "@types/mocha": "^7.0.1",
        "assert": "^2.0.0",
        "nyc": "^15.0.0",
        "source-map-support": "^0.5.16",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@types/node": "^13.7.1",
        "mocha": "^7.0.1"
    },
    "mocha": {
        "extension": [
            "ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "recursive": true
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/*.d.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true
    }
}
