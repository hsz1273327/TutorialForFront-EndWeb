{
  "compilerOptions": {
    // "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "WebWorker"
    ],
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ],
      "*": [
        "./node_modules/*"
      ],
      "tns-core-modules": [
        "./node_modules/@nativescript/core"
      ],
      "tns-core-modules/*": [
        "./node_modules/@nativescript/core/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "vueCompilerOptions": {
    "target": 3,
    "lib": "nativescript-vue"
  },
  "include": [
    "src",
    "types",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ]
}