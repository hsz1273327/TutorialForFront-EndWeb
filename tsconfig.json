{
    "compilerOptions": {
        // "strict": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "WebWorker"
        ],
        "sourceMap": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}