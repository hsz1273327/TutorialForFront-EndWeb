{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
        "ES2017",
        "es6",
        "dom"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [
        "./node_modules/@types",
        "./node_modules"
        ],
        "types": []
    },
    "exclude": [
        "demo",
        "node_modules"
    ],
    "compileOnSave": false
}